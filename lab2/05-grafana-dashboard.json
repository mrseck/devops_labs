{
    "title": "PostgreSQL PVC Monitoring",
    "tags": ["postgresql", "pvc", "storage", "lab2"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "PVC Usage Percentage",
        "type": "gauge",
        "gridPos": {"x": 0, "y": 0, "w": 8, "h": 6},
        "targets": [
          {
            "expr": "pvc_usage_percent",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 100,
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 70, "color": "yellow"},
                {"value": 85, "color": "orange"},
                {"value": 95, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "PVC Usage Evolution (7 days)",
        "type": "graph",
        "gridPos": {"x": 8, "y": 0, "w": 16, "h": 6},
        "targets": [
          {
            "expr": "pvc_usage_percent",
            "refId": "A",
            "legendFormat": "Usage %"
          }
        ],
        "xaxis": {
          "mode": "time"
        },
        "yaxis": {
          "format": "percent",
          "min": 0,
          "max": 100
        }
      },
      {
        "id": 3,
        "title": "Daily Growth Rate",
        "type": "graph",
        "gridPos": {"x": 0, "y": 6, "w": 12, "h": 6},
        "targets": [
          {
            "expr": "rate(pvc_used_bytes[24h]) * 86400",
            "refId": "A",
            "legendFormat": "Growth per day (bytes)"
          }
        ],
        "xaxis": {
          "mode": "time"
        },
        "yaxis": {
          "format": "bytes"
        }
      },
      {
        "id": 4,
        "title": "Available Space",
        "type": "stat",
        "gridPos": {"x": 12, "y": 6, "w": 6, "h": 3},
        "targets": [
          {
            "expr": "pvc_available_bytes",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "bytes",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 10737418240, "color": "yellow"},
                {"value": 21474836480, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "Saturation Projection",
        "type": "graph",
        "gridPos": {"x": 18, "y": 6, "w": 6, "h": 6},
        "targets": [
          {
            "expr": "pvc_used_bytes",
            "refId": "A",
            "legendFormat": "Current usage"
          },
          {
            "expr": "predict_linear(pvc_used_bytes[7d], 7 * 24 * 3600)",
            "refId": "B",
            "legendFormat": "Projection (7 days)"
          },
          {
            "expr": "pvc_capacity_bytes",
            "refId": "C",
            "legendFormat": "Capacity"
          }
        ],
        "xaxis": {
          "mode": "time"
        },
        "yaxis": {
          "format": "bytes"
        }
      },
      {
        "id": 6,
        "title": "Estimated Time to Saturation",
        "type": "stat",
        "gridPos": {"x": 12, "y": 9, "w": 6, "h": 3},
        "targets": [
          {
            "expr": "(pvc_capacity_bytes - pvc_used_bytes) / rate(pvc_used_bytes[7d])",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "decimals": 0
          }
        },
        "options": {
          "colorMode": "value",
          "graphMode": "area"
        }
      }
    ],
    "templating": {
      "list": [
        {
          "name": "namespace",
          "type": "query",
          "query": "label_values(pvc_usage_percent, namespace)",
          "current": {
            "value": "random-db"
          }
        },
        {
          "name": "pod",
          "type": "query",
          "query": "label_values(pvc_usage_percent{namespace=\"$namespace\"}, pod)",
          "current": {
            "value": "postgres-0"
          }
        },
        {
          "name": "interval",
          "type": "interval",
          "options": [
            {"value": "15s", "text": "15s"},
            {"value": "30s", "text": "30s"},
            {"value": "1m", "text": "1m"},
            {"value": "5m", "text": "5m"}
          ],
          "current": {
            "value": "30s"
          }
        }
      ]
    }
}

